#!/bin/bash

JDT_URL="http://download.eclipse.org/jdtls/milestones/0.47.0/jdt-language-server-0.47.0-201911150945.tar.gz"
if [[ ! -d ~/.jdtls ]]; then
    mkdir ~/.jdtls
    wget "$JDT_URL" -O ~/.jdtls/eclipse-jdtls.tar.gz
    tar xvzf ~/.jdtls/eclipse-jdtls.tar.gz -C ~/.jdtls
fi

if [[ -f ~/.jdtls/lombok.jar ]]; then
    export JAVA_TOOL_OPTIONS="-javaagent:$HOME/.jdtls/lombok.jar"
fi

java \
    -Declipse.application=org.eclipse.jdt.ls.core.id1 \
    -Dosgi.bundles.defaultStartLevel=4 \
    -Declipse.product=org.eclipse.jdt.ls.core.product \
    -Dlog.level=ALL \
    -noverify \
    -Dfile.encoding=UTF-8 \
    -Xmx1G \
    -jar ~/.jdtls/plugins/org.eclipse.equinox.launcher_1.5.600.v20191014-2022.jar \
    -configuration ~/.jdtls/config_linux \
    -data "$1"
